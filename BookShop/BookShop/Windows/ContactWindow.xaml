<Window x:Class="BookShop.ContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookShop"
        mc:Ignorable="d"
        Title="ContactWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Contacts" 
               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>

            <Label Content="United States"/>
            <Label Content="1-800-275-2273"/>
            <Label Content="Connect with American Sign Language support" Margin="0 0 0 15"/>
            <Label Content="Education customers"/>
            <Label Content="Support: 1-800-800-2775"/>
            <Label Content="Sales: 1-800-780-5009"/>

        </StackPanel>
    </Grid>
</Window>
